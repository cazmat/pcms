# ============================================================================
# Nginx Configuration Example for PHP Blog System
# ============================================================================
#
# Copy this file to /etc/nginx/sites-available/blog
# Create a symlink: sudo ln -s /etc/nginx/sites-available/blog /etc/nginx/sites-enabled/
# Test config: sudo nginx -t
# Reload nginx: sudo systemctl reload nginx
#
# ============================================================================

server {
    listen 80;
    listen [::]:80;

    # Change this to your domain name
    server_name example.com www.example.com;

    # Document root - point to your blog installation
    root /var/www/pcms;
    index index.php index.html;

    # Charset
    charset utf-8;

    # ========================================================================
    # Security Headers
    # ========================================================================

    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;

    # ========================================================================
    # Logging
    # ========================================================================

    access_log /var/log/nginx/blog_access.log;
    error_log /var/log/nginx/blog_error.log;

    # ========================================================================
    # Security: Block access to sensitive directories and files
    # ========================================================================

    # Block access to .git directory
    location ~ /\.git {
        deny all;
        return 404;
    }

    # Block access to includes directory
    location ^~ /includes/ {
        deny all;
        return 404;
    }

    # Block access to sql directory
    location ^~ /sql/ {
        deny all;
        return 404;
    }

    # Block access to setup.php (uncomment after initial setup)
    # location = /setup.php {
    #     deny all;
    #     return 404;
    # }

    # Block access to hidden files
    location ~ /\. {
        deny all;
        return 404;
    }

    # ========================================================================
    # Static Files: Browser Caching
    # ========================================================================

    location ~* \.(jpg|jpeg|png|gif|ico|svg|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    location ~* \.(css|js)$ {
        expires 1M;
        add_header Cache-Control "public";
    }

    location ~* \.(woff|woff2|ttf|otf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # ========================================================================
    # Clean URLs: Blog Post URLs
    # ========================================================================

    # /post/slug-name -> post.php?slug=slug-name
    location ~ ^/post/([a-z0-9-]+)/?$ {
        try_files $uri /post.php?slug=$1;
    }

    # ========================================================================
    # Clean URLs: Admin URLs
    # ========================================================================

    # /admin -> admin/index.php
    location = /admin {
        try_files $uri /admin/index.php;
    }

    location = /admin/ {
        try_files $uri /admin/index.php;
    }

    # /admin/login -> admin/login.php
    location ~ ^/admin/login/?$ {
        try_files $uri /admin/login.php;
    }

    # /admin/logout -> admin/logout.php
    location ~ ^/admin/logout/?$ {
        try_files $uri /admin/logout.php;
    }

    # /admin/edit -> admin/edit.php
    # /admin/edit/123 -> admin/edit.php?id=123
    location ~ ^/admin/edit/?([0-9]+)?/?$ {
        set $post_id $1;
        if ($post_id) {
            rewrite ^ /admin/edit.php?id=$post_id last;
        }
        try_files $uri /admin/edit.php;
    }

    # ========================================================================
    # PHP Processing
    # ========================================================================

    # Remove .php extension from URLs
    location / {
        try_files $uri $uri/ $uri.php?$query_string;
    }

    # Process PHP files
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;

        # FastCGI params - adjust socket path as needed
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
        # Or use TCP: fastcgi_pass 127.0.0.1:9000;

        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;

        # Security
        fastcgi_param PHP_VALUE "expose_php=off";
        fastcgi_param PHP_VALUE "session.cookie_httponly=1";
        fastcgi_param PHP_VALUE "session.use_strict_mode=1";
    }

    # ========================================================================
    # Error Pages
    # ========================================================================

    error_page 404 /404.php;
    error_page 500 502 503 504 /500.php;

    # ========================================================================
    # Gzip Compression
    # ========================================================================

    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/rss+xml
        font/truetype
        font/opentype
        application/vnd.ms-fontobject
        image/svg+xml;
}

